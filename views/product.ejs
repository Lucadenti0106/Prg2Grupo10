<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />
	
	<title> Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>
<body>
	<!-- Header -->
	<% if (usuario) { %>
		<%- include('partials/headerlogueado') %>
	<% } else { %>
		<%- include('partials/header') %>
	<% } %>	<!-- /Header -->
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= producto.nombre_producto%></h2> 
			<p class="product-detail-description">
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= producto.imagen_producto %>" alt="<%= producto.nombre_producto %>" class="product-detail-img">
					<p class="product-detail-description"><%= producto.descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for(let i = 0; i < comentarios.length; i++) { %>
						  <article>
							<img src="<%= comentarios[i].usuario.foto_perfil %>" alt="Foto de <%= comentarios[i].usuario.nombre_usuario %>" width="35">
							<div class="data">
							  <p class="user">
								<a href="/users/profile/<%= comentarios[i].usuario.id %>">
								  <strong><%= comentarios[i].usuario.nombre_usuario %></strong>
								</a>
								<%= comentarios[i].comentario %>
							  </p>
							</div>
						  </article>
						<% } %>
					  </section>
					<form class="form" action="/product/detalle/<%= producto.id %>/comentar" method="POST">
						<input class="form-input" type="text" name="comentar" value="" placeholder="Agregar comentario" required>
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->

</body>	
</html>