<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link width="" rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />

    <title> Mercado Liebre Argentina</title>
        <!-- Font Awesome Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <!-- Bootstrap Grid Stylesheet -->
    <link rel="stylesheet" href="/css/bootstrap-grid.min.css">
    <!-- Own Stylesheet -->
    <link rel="stylesheet" href="/css/app.css">
</head>
<body>
    <!-- Header -->
    <%- include('partials/headerLogeado', { usuario }) %>
    <!-- /Header -->

    <!-- Datos del usuario -->
    <div class="container products-wrapper"> 
        <div class="row"> 
            <div class="col-12">
                <div class="d-flex align-items-center"> 
                    <div class="img-container col-2">
                        <img src="<%= usuario.foto_perfil %>" alt="foto de perfil" class="foto-perfil">
                    </div>
                    <div class="data-container col-10"> 
                        <div class="d-flex align-items-center ">
                            <h1 class="main-title"><%= usuario.usuario %>
                                <a href="/profile-edit"> 
                                    <i class="fas fa-cog"></i>
                                </a>
                            </h1>
                            <a class="btn mt-3 ml-4" href="">SEGUIR</a> 
                        </div>
                        <div>
                            <p>Email: <%= usuario.email %></p>
                            <p>DNI: <%= usuario.dni %></p> 
                            <p>Fecha de Nacimiento: <%= usuario.fecha_nacimiento %></p> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <!-- /Datos del usuario -->

    <!-- Mis productos -->
        <div class="row"> 
            <div class="col-12">
                <h2 class="products-title">Mis productos</h2>
            </div>
            
            <% for(let i = 0; i < productos.length; i++) { %>
                <% let producto = productos[i]; %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/product/<%= producto.id %>">
                            <figure class="product-box_image">
                                <img src="<%= producto.imagen %>" alt="<%= producto.nombre_producto %>">
                            </figure>
                            <article class="product-box_data">
                                <h2><%= producto.nombre_producto %></h2>
                                <p>Comentarios: <%= producto.comentarios.length %></p>
                            </article>
                        </a>
                    </section>
                </div>
            <% } %>
    <!-- /Mis productos -->


    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- /footer -->
</body>
</html>
